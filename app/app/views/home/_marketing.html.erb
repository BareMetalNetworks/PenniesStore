  <div class="container marketing">

<div class="row mt-5">
    <!-- Three columns of text below the carousel -->
    <% Product.order(Arel.sql('RANDOM()')).limit(3).each do |product| %>
    
      <div class="col-lg-4">
        <%= image_tag product.image_url, :class => 'table-product-image' %>

        <h2><%= product.name %></h2>
        <p>Some representative placeholder content for the three columns of text below the carousel. This is the first column.</p>
        <p><%= link_to "View Details", product, :class =>"btn btn-primary" %></p>
       
      </div><!-- /.col-lg-4 -->

 <% end %>      
    </div><!-- /.row -->
  </div>