<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Headline</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.kind %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.image_url, :class => 'table-product-image' %></td>
        <td><%= product.price %></td>
        <td><%= product.headline %></td>
        <td><%= link_to 'Show', product %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

